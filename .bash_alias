if [[ `uname` == "FreeBSD" ]]
then
	alias ls='ls -G'
	alias lsl='ls -lhG'
	alias lsa='ls -aG'
	alias lsal='ls -alhG'
	alias lsla='ls -alhG'
fi
if [[ `uname` == "Linux" ]]
    then
	alias ls='ls --color=auto'
	alias lsl='ls -lh --color=auto'
	alias lsa='ls -a --color=auto'
	alias lsal='ls -alh --color=auto'
	alias lsla='ls -alh --color=auto'
fi

alias 'cd..'='cd ..'
alias tree='tree -C'

alias nc=ncat
