if [[ $EUID -ne 0 ]]; then 
	PS1='\[\033[01;32m\]\u@\h\[\033[00m\]: \[\033[01;34m\]\W\[\033[00m\]\$ '
else
	PS1='\[\e[0;31m\]\u\[\e[m\] \[\e[1;34m\]\w\[\e[m\] \[\e[0;31m\]\$ \[\e[m\]\[\e[0;00m\] '
fi

export HISTCONTROL=ignoredups
complete -cf sudo
complete -cf man

set show-all-if-ambiguious
set show-all-if-unmodified
